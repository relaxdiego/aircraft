default=autoinstall
timeout=5
timeout_style=menu
menuentry "Focal Live Installer - automated" --id=autoinstall {
    echo "Loading Kernel..."
    #j make sure to escape the ';'
    linux /vmlinuz ip=dhcp url=http://{{pxe.http_server}}/{{pxe.os_image_filename}} autoinstall ds=nocloud-net\;s=http://{{pxe.http_server}}/
    echo "Loading Ram Disk..."
    initrd /initrd
}
menuentry "Focal Live Installer" --id=install {
    echo "Loading Kernel..."
    linux /vmlinuz ip=dhcp url={{pxe.http_server}}/{{pxe.os_image_filename}}
    echo "Loading Ram Disk..."
    initrd /initrd
}
