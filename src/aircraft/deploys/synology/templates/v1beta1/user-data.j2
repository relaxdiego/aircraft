#cloud-config
# For a more complete set of keys, try the manual install in the GRUB menu
# first and then finish the installation manually then copy the file
# generated at /var/log/installer/autoinstall-user-data to here and
# customize to taste.
autoinstall:
  version: 1
  identity:
    hostname: {{machine.hostname}}
    password: "$6$exDY1mhS4KUYCE/2$zmn9ToZwTKLhCw.b4/b.ZRTIZM30JZ4QrOQ2aOXJ8yk96xpcCof0kxKwuX1kqLG/ygbJ1f8wxED22bTL4F46P0"
    username: ubuntu
  keyboard:
    layout: us
    toggle: null
    variant: ''
  locale: C
  network:
    version: 2
    ethernets:
      eno1:
        dhcp4: false
        critical: true
        addresses:
        - {{machine.static_ip}}
        nameservers:
          addresses:
          - 192.168.86.1
        gateway4: 192.168.100.1
  ssh:
    allow-pw: false
    install-server: true
    disable-root: true
    authorized-keys: ['ssh-rsa 
        relaxdiego@github/41264277 # ssh-import-id gh:relaxdiego', '', 'ssh-rsa 
        relaxdiego@github/47224202 # ssh-import-id gh:relaxdiego']
  storage:
    config:
    - {ptable: gpt, path: /dev/sda, wipe: superblock, preserve: false, name: '', grub_device: false,
      type: disk, id: disk-sda}
    - {device: disk-sda, size: 536870912, wipe: superblock, flag: boot, number: 1,
      preserve: false, grub_device: true, type: partition, id: partition-0}
    - {fstype: fat32, volume: partition-0, preserve: false, type: format, id: format-0}
    - {device: disk-sda, size: 1073741824, wipe: superblock, flag: '', number: 2,
      preserve: false, type: partition, id: partition-1}
    - {fstype: ext4, volume: partition-1, preserve: false, type: format, id: format-1}
    - {device: disk-sda, size: 478490394624, wipe: superblock, flag: '', number: 3,
      preserve: false, type: partition, id: partition-2}
    - name: ubuntu-vg
      devices: [partition-2]
      preserve: false
      type: lvm_volgroup
      id: lvm_volgroup-0
    - {name: ubuntu-lv, volgroup: lvm_volgroup-0, size: 214748364800B, preserve: false,
      type: lvm_partition, id: lvm_partition-0}
    - {fstype: ext4, volume: lvm_partition-0, preserve: false, type: format, id: format-2}
    - {device: format-2, path: /, type: mount, id: mount-2}
    - {device: format-1, path: /boot, type: mount, id: mount-1}
    - {device: format-0, path: /boot/efi, type: mount, id: mount-0}
  power_state:
    mode: reboot
    condition: True
  apt:
    geoip: true
    preserve_sources_list: false
    primary:
    - arches: [amd64, i386]
      uri: http://archive.ubuntu.com/ubuntu
    - arches: [default]
      uri: http://ports.ubuntu.com/ubuntu-ports
